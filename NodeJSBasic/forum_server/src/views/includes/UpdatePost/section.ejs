<div class="update-content">
  <form action="post" id="fileForm" enctype="multipart/form-data">
    <label for="title" class="form-label">제목</label>
    <div class="input-group mb-3 input-group-lg">
      <input type="text" id="title" class="form-control" name="title" value=<%= content.title %>>
    </div>
    <label for="user" class="form-label">작성자</label>
    <div class="input-group mb-3">
      <input type="text" id="user" class="form-control" name="userName" value=<%= content.userName %>>
    </div>
    <label for="password" class="form-label">비밀번호</label>
    <div class="input-group mb-3">
      <input type="text" id="password" class="form-control" name="userPwd" placeholder="비밀번호" value=''>
    </div>
    <label for="content" class="form-label">내용</label>
    <div class="input-group mb-3">
      <textarea id="content" class="form-control" name="description" value=<%= content.description %> ></textarea>
    </div>
    <label class="form-label" for="thumbnail">썸네일</label>
    <div class="input-group mb-3">
      <input type="file" class="form-control" id="thumbnail" name="thumbnail" accept='image/jpg, image/png, image/jpeg' >
    </div>
    <div>
      <button type="submit" onclick="modify_post()" class="btn btn-success mb-3">게시물 수정</button>
      <button type="submit" onclick="delete_post()" class="btn btn-danger mb-3">게시물 삭제</button>
    </div>
  </form>
</div>